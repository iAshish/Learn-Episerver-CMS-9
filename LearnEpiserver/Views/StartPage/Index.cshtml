@using EPiServer.Editor
@using EPiServer.Core
@model LearnEpiserver.Models.Pages.StartPage

@{
    Layout = "~/Views/Shared/_root.cshtml";
}

@if (Model.CarouselArea != null || PageEditing.PageIsInEditMode)
{
    <div id="carouselLearnEpiServer" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">

            @for (int i = 0; i < Model.CarouselArea.Items.Count; i++)
            {
                if (i == 0)
                {
                    <li data-target="#carouselLearnEpiServer" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselLearnEpiServer" data-slide-to="@i"></li>
                }
            }
        </ol>
        <div class="carousel-inner">

            @foreach (var item in Model.CarouselArea.Items)
            {
                var block = item.GetContent();
                Html.RenderContentData(block, true);
            }

        </div>
        <a class="carousel-control-prev" href="#carouselLearnEpiServer" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselLearnEpiServer" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}

<div class="jumbotron">
    <div class="container">
        <h1 class="display-3">@Html.PropertyFor(x => x.Heading)</h1>
        <p class="lead">@Html.PropertyFor(x => x.MainBody)</p>
    </div>
</div>

@if (Model.MainContentArea != null || PageEditing.PageIsInEditMode)
{
    <div class="card-deck">

        @foreach (var item in Model.MainContentArea.Items)
        {
            var block = item.GetContent();
            Html.RenderContentData(block, true);
        }

    </div>
}